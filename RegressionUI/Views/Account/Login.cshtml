@model RegressionUI.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="form-group">
                    <div class="col-lg-10">
                        @Html.LabelFor(model => model.UserName)
                        @Html.ValidationMessageFor(model => model.UserName, "*", new { @class = "text-danger" })
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @data_rule_required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10">
                        @Html.LabelFor(model => model.Password)
                        @Html.ValidationMessageFor(model => model.Password, "*", new { @class = "text-danger" })
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @data_rule_required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10">
                        @Html.ValidationSummary(true)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10" style="padding-top: 15px">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}